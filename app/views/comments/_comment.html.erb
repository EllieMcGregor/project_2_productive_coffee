<div class="comment">
  <div class="comment-image">
    <p><%= comment.created_at %> </p>
  </div>
  <div class="comment-content">
    <h3><%= comment.title %></h3>
    <p><%= comment.user.try :first_name %> <%= comment.user.try :last_name %></p>
    <p><%= comment.comment %></p> 
    <p class="comment-detail"><%= comment.created_at%></p>
  </div>
</div>

